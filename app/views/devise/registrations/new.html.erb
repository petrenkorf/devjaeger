<div class="bg-white shadow-md p-8 rounded-md w-96">
  <h2 class="text-purple-400 text-3xl">Sign up</h2>
  <div class="mb-4">
    <p class="notice"><%= notice %></p>
    <p class="text-red-600 alert"><%= alert %></p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'text-gray-400' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-purple-600 pl-2 rounded-sm shadow-md h-10 mb-4 focus:ring-2 focus:outline-none focus:ring-purple-400 focus:border-transparent w-full' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'text-gray-400' %>
      <% if @minimum_password_length %>
      <em class="text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'text-purple-600 pl-2 rounded-sm shadow-md h-10 mb-4 focus:ring-2 focus:outline-none focus:ring-purple-400 focus:border-transparent w-full' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'text-gray-400' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-purple-600 pl-2 rounded-sm shadow-md h-10 mb-4 focus:ring-2 focus:outline-none focus:ring-purple-400 focus:border-transparent w-full' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", id: 'sign_up_button', class: 'cursor-pointer bg-purple-400 hover:bg-purple-600 mt-4 px-4 py-2 rounded text-white uppercase w-full transition-all' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>